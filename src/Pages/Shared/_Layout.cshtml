<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>
        LeanAspNetCore - @ViewData["Title"]
    </title>

    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
    <pgp-environment names="Staging,Production">
        <link rel="stylesheet" href="~/client-app/styles.css" asp-append-version="true" />
    </pgp-environment> 
    @RenderSection("Styles", required: false)

</head>

<body>

    <pgp-partial name="_Header" />

    <main role="main" class="container">

        <h2 class="mt-3 mb-3">
            @ViewData["Title"]
        </h2>

        @RenderBody()

    </main>

    <pgp-script client-script="polyfills-base"></pgp-script>
    <pgp-script client-script="core"></pgp-script>
    @RenderSection("Scripts", required: false)

</body>
</html>